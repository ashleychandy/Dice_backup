# Network RPC Configuration
# At least one RPC URL must be configured for each network

# XDC Mainnet RPCs (REQUIRED)
VITE_XDC_MAINNET_PRIMARY_RPC="https://rpc.xinfin.network"    # Required primary RPC
VITE_XDC_MAINNET_FALLBACK_RPC_1="https://erpc.xinfin.network"  # Optional fallback
VITE_XDC_MAINNET_FALLBACK_RPC_2="https://rpc1.xinfin.network"  # Optional fallback
VITE_XDC_MAINNET_FALLBACK_RPC_3=""  # Optional fallback

# XDC Apothem (Testnet) RPCs (REQUIRED)
VITE_XDC_APOTHEM_PRIMARY_RPC="https://rpc.apothem.network"    # Required primary RPC
VITE_XDC_APOTHEM_FALLBACK_RPC_1="https://erpc.apothem.network"  # Optional fallback
VITE_XDC_APOTHEM_FALLBACK_RPC_2=""  # Optional fallback
VITE_XDC_APOTHEM_FALLBACK_RPC_3=""  # Optional fallback

# RPC Configuration
VITE_RPC_TIMEOUT=10000  # Timeout in milliseconds
VITE_MAX_RPC_RETRIES=3  # Maximum number of retries for failed requests

# Contract Configuration
VITE_DICE_ADDRESS=""          # Mainnet Dice contract address
VITE_TOKEN_ADDRESS=""         # Mainnet Token contract address
VITE_APOTHEM_DICE_ADDRESS=""  # Testnet Dice contract address
VITE_APOTHEM_TOKEN_ADDRESS="" # Testnet Token contract address 